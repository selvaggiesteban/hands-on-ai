# Hands-On AI v2.0 - Environment Configuration
# =============================================
# Copy this file to .env and fill in your values
# Option A: Full Integration requires multi-model support

# ===========================================
# PRIMARY AI PROVIDER (for backward compatibility)
# ===========================================
AI_PROVIDER=ANTHROPIC
AI_MODEL=claude-sonnet-4-20250514
AI_API_KEY=your_api_key_here

# ===========================================
# MULTI-MODEL PROVIDERS (Option A - Full Integration)
# ===========================================

# Anthropic (Claude)
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT-4, O1)
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4o

# Google (Gemini)
# Get key: https://aistudio.google.com/apikey
GOOGLE_API_KEY=AIza...
GOOGLE_DEFAULT_MODEL=gemini-2.0-flash

# Groq (Llama 3.3, Mixtral - Ultra Fast)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=gsk_...
GROQ_DEFAULT_MODEL=llama-3.3-70b-versatile

# DeepSeek (Economical coding)
# Get key: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-...
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# Mistral (European alternative)
# Get key: https://console.mistral.ai/
MISTRAL_API_KEY=...
MISTRAL_DEFAULT_MODEL=mistral-large-latest

# Together AI (Open source models)
# Get key: https://api.together.xyz/
TOGETHER_API_KEY=...
TOGETHER_DEFAULT_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo

# ===========================================
# AUTONOMOUS RECURSIVE DEVELOPMENT
# ===========================================
ARD_MAX_ITERATIONS=5
ARD_QUALITY_THRESHOLD=0.85
ARD_ENABLED=true

# ===========================================
# INTELLIGENT MODEL ROUTING
# ===========================================
# Options: cheap, balanced, quality
MODEL_ROUTING_BUDGET_MODE=balanced
# Enable automatic model selection based on task
MODEL_ROUTING_AUTO=true

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=INFO
DEBUG_MODE=false
SAVE_EXECUTION_LOGS=true
