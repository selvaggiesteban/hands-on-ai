{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt Library Schema",
  "description": "Schema for validating the AI prompt library file (prompt-library.json).",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "system_roles": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": { "type": "string" }
      }
    },
    "task_templates": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "category": {"type": "string"},
            "system_role": {"type": "string"},
            "prompt": {"type": "string"},
            "examples": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "input": {"type": "object"},
                  "output": {"type": "string"}
                }
              }
            },
            "constraints": {
              "type": "object",
              "properties": {
                "max_tokens": {"type": "integer"},
                "output_format": {"type": "string"}
              }
            }
          },
          "required": ["category", "system_role", "prompt"]
        }
      }
    },
    "context_injection_patterns": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": { "type": "string" }
      }
    },
    "few_shot_learning": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "max_examples": {"type": "integer"},
        "example_selection_strategy": {"type": "string"}
      }
    }
  },
  "required": [
    "system_roles",
    "task_templates"
  ]
}